<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /mes/api/

    # Serve existing files/folders normally
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route everything else to index.php
    RewriteRule ^ index.php [QSA,L]

</IfModule>
